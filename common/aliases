# ls
alias l="eza --color=always --long --git --no-filesize --icons=always --no-time --no-user --no-permissions"
alias ls="eza -lah -F --git --icons=always"
alias tree='~/.dotfiles/common/scripts.sh tree'

# git
alias gs='git status'
alias gd='git diff'
alias gdc='git diff --cached'
alias gl='~/.dotfiles/common/scripts.sh gl'
alias gcz='git-cz --disable-emoji'
alias lg='lazygit'

# cd
alias app='cd ~/App'
alias desk='cd ~/Desktop'

# pc
alias allps='ps aux'
alias du1='du -h -d 1'

# homebrew
alias bbd='brew bundle dump --force --describe'

# jman
alias man='env LANG=en_US.UTF-8 man'
alias jman='env LANG=ja_JP.UTF-8 man'

# neovim
alias vi='nvim'
alias vim='nvim'
alias view='nvim -R'
alias vimi='nvim ~/.config/nvim/init*'

# tmux
alias tl='tmux ls'
alias ta='tmux a'
alias tk='tmux kill-server'

# setup ide or project window 
alias ide='~/.dotfiles/common/scripts.sh ide'
alias michi='~/.dotfiles/common/scripts.sh michi'

# docker
alias ld='lazydocker'

# virtual machine
alias mp='multipass'

# yabai and skhd
alias yabaistart='yabai --start-service'
alias yabairestart='yabai --restart-service'
alias yabaistop='yabai --stop-service'
alias skhdstart='skhd --start-service'
alias skhdrestart='skhd --restart-service'
alias skhdstop='skhd --stop-service'
alias sketchystart='brew services start sketchybar'
alias sketchyrestart='brew services restart sketchybar'
alias sketchystop='brew services stop sketchybar'

# others
alias pwdc='pwd | tr -d "\n" | pbcopy'
alias delss='find ~/Screenshots -type f -name "スクリーン*" -print0 -or -name "Clean*" -print0 | xargs -0 rm'
alias typing='ttyper'
alias task='task -g'
