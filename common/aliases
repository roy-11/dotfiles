# ls
alias ls='exa -laFh --git'

# git
alias gs='git status'
alias gd='git diff'
alias gdc='git diff --cached'
alias gl='git log --oneline -5'

# cd
alias app='cd ~/App'
alias desk='cd ~/Desktop'

# open or edit file
alias dotf='code ~/.dotfiles'

# pc
alias allps='ps aux'
alias du1='du -d 1'

# homebrew
alias bbd='brew bundle dump --force --describe --mas'

# jman
alias man='env LANG=en_US.UTF-8 man'
alias jman='env LANG=ja_JP.UTF-8 man'

# neovim
alias vi='nvim'
alias vim='nvim'
alias view='nvim -R'
alias vimi='nvim ~/.config/nvim/init.vim'

# tmux
alias tl='tmux ls'
alias ta='tmux a'
alias tk='tmux kill-server'

# setup ide or project window 
alias ide="~/.dotfiles/common/scripts.sh ide"
alias michi="~/.dotfiles/common/scripts.sh michi"

# docker
alias lzd='lazydocker'

# others
alias pwdc='pwd | tr -d "\n" | pbcopy'
alias delss='find ~/Screenshots -type f -name "スクリーン*" -print0 | xargs -0 rm'
